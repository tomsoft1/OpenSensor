<h1>Your Feeds</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th>Unit</th>
    <th>Measures</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feeds.each do |feed| %>
  <tr>
    <td><%= feed.name %></td>
    <td><%= feed.description %></td>
    <td><%= feed.type %></td>
    <td><%= feed.unit %></td>
    <td><%= feed.measures.count %></td>
    <td><%= link_to 'Show', feed %></td>
    <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
    <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feed', new_feed_path,:class=>"btn btn-primary" %>
