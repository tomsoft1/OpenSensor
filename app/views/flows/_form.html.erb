      <ul>
      <% @flow.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :type %>

  <div class="field">
    <%= f.label :name %><br />
